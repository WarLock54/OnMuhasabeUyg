@using FaturaOtomasyon.Database
@model FaturaOtomasyon.Database.Firma
@{
    ViewBag.Title = "GetFirmafById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetFirmafById</h2>


<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
            <h4 class="card-title">Firma  Guncelleme</h4>
        </div>
        <div class="content-body">
            <section class="invoice-list-wrapper">
                <div class="card">
                    <form action="~/Firma/Guncelle" method="post" class="form form-vertical">
                        @Html.HiddenFor(s => s.Id)
                        <h6><i class="step-icon fa fa-info"></i> Bilgi</h6>
                        <fieldset>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <span class="danger">*</span>
                                        <label>
                                            <span>Firma Unvan :</span>
                                        </label>
                                        @Html.TextBoxFor(model => model.FirmaUnvan, new { @class = "form-control", id = "first-name-vertical", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>
                                        AdSoyad :
                                    </label>
                                    @Html.TextAreaFor(model => model.AdSoyad, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            Email :

                                        </label>
                                        @Html.TextAreaFor(model => model.Email, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            Telefon :

                                        </label>
                                        @Html.TextAreaFor(model => model.Telefon, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            Adres :

                                        </label>
                                        @Html.TextAreaFor(model => model.Adres, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            VergiAdres :

                                        </label>
                                        @Html.TextAreaFor(model => model.VergiAdres, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            VergiNo :

                                        </label>
                                        @Html.TextAreaFor(model => model.VergiNo, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </fieldset>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>