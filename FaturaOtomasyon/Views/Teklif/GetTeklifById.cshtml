    function duzeltOndalikKisim(num) {
        const ondalikKisim = num - Math.floor(num);

        // Ondalık kısmı 2 basamağa kadar kes
        const fixedOndalik = Math.floor(ondalikKisim * 100) / 100;

        // Tam kısmıyla birleştir ve sonucu döndür
        const sonuc = Math.floor(num) + fixedOndalik;

        return sonuc;

    }
